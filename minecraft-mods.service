[Unit]
Description=Los Nachos Minecraft Mods Server
After=network.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/minecraft-mods/server
EnvironmentFile=/home/pi/minecraft-mods/.env
ExecStart=/usr/bin/python3 /home/pi/minecraft-mods/server/app.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
